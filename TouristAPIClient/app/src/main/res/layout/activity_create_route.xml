<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreateUserActivity" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starting from:"
        android:id="@+id/tvStartPoint"
        android:layout_marginTop="103dp"
        android:layout_below="@+id/tvPhone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_StartPoint"
        android:layout_alignBottom="@+id/tvStartPoint"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tvStartPoint"
        android:layout_toRightOf="@+id/tvStartPoint" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination:"
        android:id="@+id/tvDestination"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/tvStartPoint"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_Destination"
        android:layout_alignBottom="@+id/tvDestination"
        android:layout_toEndOf="@+id/tvPhone"
        android:layout_alignLeft="@+id/et_StartPoint"
        android:layout_alignStart="@+id/et_StartPoint" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:id="@+id/tvDate"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/tvDestination"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:"
        android:id="@+id/tvTime"
        android:layout_alignTop="@+id/tvDate"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_Date"
        android:layout_alignBottom="@+id/tvDate"
        android:layout_toRightOf="@+id/tvDate"
        android:layout_toLeftOf="@+id/tvTime"
        android:layout_toStartOf="@+id/tvTime" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_Time"
        android:layout_alignBottom="@+id/tvTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/tvTime"
        android:layout_toEndOf="@+id/tvTime" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Route"
        android:id="@+id/btnAddRoute"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/et_PhoneNumber"
        android:layout_alignEnd="@+id/et_PhoneNumber"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owner:"
        android:id="@+id/tvOwner"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/et_StartPoint"
        android:layout_toStartOf="@+id/et_StartPoint" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_Owner"
        android:layout_alignBottom="@+id/tvOwner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/tvOwner"
        android:layout_toEndOf="@+id/tvOwner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number:"
        android:id="@+id/tv_phone"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/tvOwner"
 />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_PhoneNumber"
        android:layout_alignBottom="@+id/tv_phone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tv_phone"
        android:layout_toRightOf="@+id/tv_phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter new route details"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>